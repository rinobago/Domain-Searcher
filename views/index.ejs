<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Domain Searcher</title>
    <link rel="stylesheet" href="styles/index.css" />
  </head>
  <body>
    <div class="background">
      <div class="title"><h1>Domain Searcher</h1></div>
      <div class="main">
        <form action="/searched" method="post">
          <input class="input" type="search" name="search" placeholder="Domain name..." value="<%= locals.data ? search: '' %>" />
          <input class="button" type="submit" value="SEARCH" />
        </form>
        <% if (locals.data && Array.isArray(data.domains)) { %>
        <div class="results">
          <h2>Results:</h2>
          <div class="domainNames">
            <ul>
              <% for (let i = 0; i < data.domains.length; i++) { %>
              <li><%= data.domains[i].domain %></li>
              <% } %>
            </ul>
          </div>
          <div class="space"></div>
        </div>
        <% } else if (locals.data && data.message) { %>
        <div class="results">
          <h2>Results:</h2>
          <div class="domainNames">
            <p>No results found.</p>
          </div>
          <div class="space"></div>
        </div>
        <% } %>
